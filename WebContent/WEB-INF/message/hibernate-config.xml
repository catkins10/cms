<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<!--个人信息-->
	<class name="com.yuanluesoft.message.pojo.Personinfo" table="message_personinfo">
		<id name="id" column="id" type="long">
			<generator class="assigned"/>
		</id>
		<property name="name"/> <!--姓名,VARCHAR(20)-->
		<property name="sex"/> <!--性别,VARCHAR(2)-->
		<property name="age"/> <!--年龄,NUMERIC(2)-->
		<property name="birthday"/> <!--出生日期,TIMESTAMP-->
		<property name="phone"/> <!--联系电话,VARCHAR(20)-->
		<property name="email"/> <!--邮件,VARCHAR(100)-->
		<property name="address"/> <!--家庭住址,VARCHAR(100)-->
	</class>
	
</hibernate-mapping>