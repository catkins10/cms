<?xml version="1.0" encoding="UTF-8"?>

<businessObjects>
	<businessObject title="中文词库" class="com.yuanluesoft.jeaf.word.pojo.ChineseWord" businessServiceName="wordService">
		<field name="word" title="词语" length="20" required="true" type="string" inputMode="text"/>
		<field name="wordLength" title="长度" length="2" type="number" inputMode="readonly"/>
		<field name="isNoun" title="是否名词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">名词</parameter>
		</field>
		<field name="isVerb" title="是否动词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">动词</parameter>
		</field>
		<field name="isAdjective" title="是否形容词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">形容词</parameter>
		</field>
		<field name="isAdverb" title="是否副词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">副词</parameter>
		</field>
		<field name="isMeasure" title="是否量词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">量词</parameter>
		</field>
		<field name="isOnomatopoeia" title="是否拟声词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">拟声词</parameter>
		</field>
		<field name="isStructural" title="是否结构助词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">结构助词</parameter>
		</field>
		<field name="isAuxiliary" title="是否助词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">助词</parameter>
		</field>
		<field name="isCoordinating" title="是否并列连词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">并列连词</parameter>
		</field>
		<field name="isConjunction" title="是否连词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">连词</parameter>
		</field>
		<field name="isPreposition" title="是否介词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">介词</parameter>
		</field>
		<field name="isPronoun" title="是否代词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">代词</parameter>
		</field>
		<field name="isInterrogative" title="是否疑问词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">疑问词</parameter>
		</field>
		<field name="isNumeral" title="是否数词" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">数词</parameter>
		</field>
		<field name="isProverbs" title="是否成语" length="1" type="number" inputMode="checkbox">
			<parameter name="value">1</parameter>
			<parameter name="label">成语</parameter>
		</field>
	</businessObject>
</businessObjects>