<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 version="1.0">
	<portlet>
		<description>信件选登</description>
		<portlet-name>leaderMails</portlet-name>
		<display-name>信件选登</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>leaderMails</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<init-param>
			<description>扩展属性</description>
			<name>extendProperties</name>
			<value>siteNames={PARAMETER:siteNames}&amp;siteIds={PARAMETER:siteIds}&amp;containChildren={PARAMETER:containChildren}</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>信件选登</title>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>siteIds</name>
				<value>label=站点ID&amp;inputMode=hidden</value>
				<read-only>true</read-only>
			</preference>
			<preference>
				<name>siteNames</name>
				<value>label=站点名称&amp;inputMode=select&amp;selectOnly=true&amp;js=/cms/sitemanage/js/site.js&amp;execute=selectSite(600, 400, true, 'siteIds{id},siteNames{name|站点|100%}', '', '', ',', 'site')</value>
				<read-only>true</read-only>
			</preference>
			<preference>
				<name>containChildren</name>
				<value>label=是否包含子站点&amp;inputMode=checkbox&amp;value=true&amp;parameter_label=包含</value>
				<read-only>true</read-only>
			</preference>
		</portlet-preferences>
	</portlet>	 
			 
	<portlet>
		<description>待处理信件</description>
		<portlet-name>todoLeaderMails</portlet-name>
		<display-name>待处理信件</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>admin/todoLeaderMail</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>待处理信件</title>
		</portlet-info>
	</portlet>
	
	<portlet>
		<description>在处理信件</description>
		<portlet-name>inProcessLeaderMails</portlet-name>
		<display-name>在处理信件</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>admin/inProcessLeaderMail</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>在处理信件</title>
		</portlet-info>
	</portlet>
</portlet-app>