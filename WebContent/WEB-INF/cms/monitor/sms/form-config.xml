			<action title="关闭" execute="window.close()"/>
			<action title="保存" hide="isRead()" execute="FormUtils.submitForm()"/>
			<action title="删除" hide="deleteDisable()" execute="if(confirm('删除后不可恢复，是否确定要删除？'))FormUtils.doAction('deleteSmsReceive')"/>
		</actions>
	</form>
</forms>