<?xml version="1.0" encoding="UTF-8"?>

<Application>
	<Actions>
		<Action Name="送审核" Send="true"/>
		<Action Name="审核" Send="true"/>
		<Action Name="发送短信" Send="true"/>
		<Action Name="删除" DeleteAction="true"/>
	</Actions>
	<ProgrammingParticipants>
		<ProgrammingParticipant Id="smsEditor" Name="短信编辑人员"/>
		<ProgrammingParticipant Id="smsAuditor" Name="短信审核人员"/>
	</ProgrammingParticipants>
	<SubForms>
		<SubForm Id="Edit" Name="编辑"/>
		<SubForm Id="Read" Name="只读"/>
	</SubForms>
	<TypeDeclarations>
		<TypeDeclaration Id="result" Name="审核结果">
			<SchemaType>
				<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
					elementFormDefault="qualified" 
					attributeFormDefault="unqualified">
					<xsd:element name="result">
						<xsd:simpleType>
							<xsd:restriction base="xsd:NMTOKEN">
								<xsd:enumeration value="同意发送"/>
								<xsd:enumeration value="不同意发送"/>
							</xsd:restriction>
						</xsd:simpleType>
					</xsd:element>
				</xsd:schema>
			</SchemaType>
		</TypeDeclaration>
	</TypeDeclarations>
	<DataFields>
		<DataField Id="approvalResult" Name="审核结果">
			<DataType>
				<DeclaredType Id="result"/>
			</DataType>
		</DataField>
		<DataField Id="smsBusinessName" Name="短信业务分类">
			<DataType>
				<BasicType Type="STRING"/>
			</DataType>
		</DataField>
	</DataFields>
	<Applications>
		<Application Id="sendSmsMessage" Name="发送短信">
			<FormalParameters>
				<FormalParameter Id="sessionInfo" Index="1" Mode="IN">
					<DataType>
						<DeclaredType Type="SessionInfo"/>
					</DataType>
					<Description>用户会话</Description>
				</FormalParameter>
			</FormalParameters>
			<ExtendedAttributes>
				<!--类型:procedure/内部过程,application/外部应用,decision/判断-->
				<ExtendedAttribute Name="type">procedure</ExtendedAttribute>
				<!--结束方式:Automatic/自动,Manual/人工-->
				<ExtendedAttribute Name="finishMode">Automatic</ExtendedAttribute>
				<ExtendedAttribute Name="service">smsSendService</ExtendedAttribute>
				<ExtendedAttribute Name="function">sendSmsMessage</ExtendedAttribute>
			</ExtendedAttributes>
		</Application>
	</Applications>
</Application>