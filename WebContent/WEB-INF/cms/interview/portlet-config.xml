<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 version="1.0">
	<portlet>
		<description>在线访谈预告</description>
		<portlet-name>todoInterviews</portlet-name>
		<display-name>在线访谈预告</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>todoInterviews</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>beginTime</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>在线访谈预告</title>
		</portlet-info>
	</portlet>
	
	<portlet>
		<description>往期访谈</description>
		<portlet-name>bypastInterviews</portlet-name>
		<display-name>往期访谈</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>bypastInterviews</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>beginTime</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>往期访谈</title>
		</portlet-info>
	</portlet>
</portlet-app>