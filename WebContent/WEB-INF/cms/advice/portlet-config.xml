<?xml version="1.0" encoding="utf-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
			 version="1.0">
	<portlet>
		<description>征集中的民意征集主题列表</description>
		<portlet-name>processingAdviceTopics</portlet-name>
		<display-name>征集中的民意征集主题列表</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>processingAdviceTopics</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>征集中的民意征集主题列表</title>
		</portlet-info>
	</portlet>
	
	<portlet>
		<description>全部民意征集主题列表</description>
		<portlet-name>adviceTopics</portlet-name>
		<display-name>民意征集主题列表</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>adviceTopics</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>民意征集主题列表</title>
		</portlet-info>
	</portlet>
			 
	<portlet>
		<description>待处理民意征集</description>
		<portlet-name>todoAdvice</portlet-name>
		<display-name>待处理民意征集</display-name>
		<portlet-class>com.yuanluesoft.portal.portlet.ViewPortlet</portlet-class>
		<init-param>
			<description>视图名称</description>
			<name>viewName</name>
			<value>admin/todoAdvice</value>
		</init-param>
		<init-param>
			<description>标题字段名称</description>
			<name>titleFieldName</name>
			<value>subject</value>
		</init-param>
		<init-param>
			<description>时间字段名称</description>
			<name>timeFieldName</name>
			<value>created</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>zh</supported-locale>
		<resource-bundle>Resource</resource-bundle>
		<portlet-info>
			<title>待处理民意征集</title>
		</portlet-info>
	</portlet>
</portlet-app>