<?xml version="1.0" encoding="UTF-8"?>

<forms>
	<form name="trainInfo" class="com.yuanluesoft.educ.train.forms.admin.TrainInfoForm" title="培训基本信息管理" pojo="com.yuanluesoft.educ.train.pojo.TrainInfo">
		<actions>
			<action title="关闭" execute="window.close()"/>
			<action title="保存" hide="isRead()" execute="FormUtils.submitForm()"/>
			<action title="删除" hide="deleteDisable()" execute="if(confirm('删除后不可恢复，是否确定要删除？'))FormUtils.doAction('deleteTrainInfo')"/>
		</actions>
	</form>
	<form class="com.yuanluesoft.educ.train.forms.admin.TrainConfig" title="请假配置" pojo="com.yuanluesoft.educ.train.pojo.TrainConfig">
		<actions>
			<action title="关闭" execute="window.close()"/>
			<action title="保存" execute="FormUtils.submitForm()"/>
		</actions>
	</form>
</forms>