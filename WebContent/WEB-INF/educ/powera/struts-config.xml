<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
 <data-sources/>
 <form-beans>
  <form-bean name="powera" type="com.yuanluesoft.educ.powera.forms.Powera"/>
 
 </form-beans>
 <global-exceptions>
  <exception key="exception" path="/../../jeaf/form/error.jsp"
   scope="request" type="java.lang.Exception"/>
 </global-exceptions>
 <global-forwards>
  <forward name="result" path="/../../jeaf/form/result.jsp"/>
 </global-forwards>
 <action-mappings>
  <action name="powera" path="/powera" scope="request"
   type="com.yuanluesoft.educ.powera.actions.Load" validate="false">
   <forward name="load" path="/powera.jsp"/>
  </action>
  <action input="/powera.jsp" name="powera" path="/save" scope="request"
   type="com.yuanluesoft.educ.powera.actions.Save" validate="false"/>
  <action input="/powera.jsp" name="powera" path="/delete" scope="request"
   type="com.yuanluesoft.educ.powera.actions.Delete" validate="false"/>
   
   
 </action-mappings>
 <controller bufferSize="4096" maxFileSize="200M"/>
</struts-config>
