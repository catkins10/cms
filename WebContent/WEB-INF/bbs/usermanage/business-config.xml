<?xml version="1.0" encoding="UTF-8"?>

<businessObjects>
	<businessObject title="论坛用户管理" class="com.yuanluesoft.bbs.usermanage.pojo.BbsUser">
		<field name="nickname" title="昵称" length="50" type="string" inputMode="text"/>
		<field name="vip" title="VIP用户" length="1" type="char" inputMode="radio">
			<parameter name="itemsText">是|1\0不是|0</parameter>
		</field>
		<field name="point" title="积分" length="5" type="number" inputMode="readonly"/>
		<field name="status" title="状态" length="20" type="string" inputMode="readonly"/>
		<field name="replyCount" title="回帖数" length="5" type="number" inputMode="readonly"/>
		<field name="postCount" title="发帖数" length="7" type="number" inputMode="readonly"/>
		<field name="type" title="用户类型" length="1" type="char" inputMode="none"/>
	</businessObject>
</businessObjects>
